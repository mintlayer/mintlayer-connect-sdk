{
  "name": "mintlayer-connect-sdk",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "pnpm -r build",
    "build:sdk": "pnpm --filter @mintlayer/sdk build",
    "build:react": "pnpm --filter @mintlayer/react build",
    "publish:sdk": "pnpm --filter @mintlayer/sdk publish --access public",
    "publish:react": "pnpm --filter @mintlayer/react publish --access public",
    "publish:all": "pnpm -r publish --access public",
    "serve": "npx http-server . -p 8080"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "webpack": "^5.0.0",
    "webpack-cli": "^5.0.0",
    "ts-loader": "^9.0.0"
  }
}
